<% if user_signed_in? %>
  <div class='row mb-12 profile-title'>
      <div class= 'col bd-highlight p-3 card'>
        <h1><%= @user.first_name %> <%= @user.last_name %></h1><br/>
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-primary' %>
        <%= link_to 'Logout', destroy_user_session_path, :method => :get, class: 'btn' %>
      </div>
      <div class='col bd-highlight p-3'>
          <br>
           <h4><%= @user.credits %> <%= @user.credits == 1 ? "Credit" : "Credits" %> Available</h4>
           <%= link_to 'Get Credits', price_page_path, class: 'btn btn-info' %>
      </div>
  </div>
  <br>
  <%= link_to share_path do %>
  <div class="jumbotron invite_friends_div">
    <h1>Invite Friends, Get Paid!</h1>
  </div>
  <% end %>
  <div class='row'>
  </div>


<% if !!@user.money_earned %>
  <div class='jumbotron'>
    <div class='row'>
      <h2 class=''>$<%= @user.money_earned %> in your account!</h2>
      <div class=''>
        <%= link_to "Cash Out", share_path, class:'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
<% end %>
