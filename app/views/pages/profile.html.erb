<% if user_signed_in? %>
  <div class='row mb-12 main-title'>

      <div class= 'col bd-highlight p-3'>
        <h1><%= @user.first_name %> <%= @user.last_name %></h1><br/>
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-primary' %>
        <%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: 'btn' %>
      </div>
      <div class='col bd-highlight p-3'>
          <br>
           <h4><%= @user.credits %> <%= @user.credits == 1 ? "Credit" : "Credits" %> Available</h4>
           <%= link_to 'Get Credits', price_page_path, class: 'btn btn-info' %>
      </div>

  </div>
  <br>
  <%= link_to share_path do %>
  <div class="jumbotron invite_friends_div">
    <h1>Invite Friends, Get Paid!</h1>
  </div>
  <% end %>
  <div class='row'>
    <div class="col p-4">
      <div class="jumbotron">
      <h3><%= @job_links.count %> Jobs Searched For</h3>
      </div>
    </div>
    <div class="col p-4">
      <div class="jumbotron">
      <h3><%= @job_applications_count %> Applications Submited</h3>
      </div>
    </div>
    <div class="col p-4">
      <div class="jumbotron">
      <% if @users_friends_count > 0 %>
        <h5><%= @users_friends_count %> Friends Referred</h>
      <% end %>
        <%= link_to "Refer Friends", share_path, class:'btn btn-primary' %>
      </div>
    </div>
  </div>


<% if !!@user.money_earned %>
  <div class='jumbotron'>
    <div class='row'>
      <h2 class=''>$<%= @user.money_earned %> in your account!</h2>
      <div class=''>
        <%= link_to "Cash Out", share_path, class:'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
<% end %>
